<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
      "http://www.hibernate.org/dtd/hibernate-mapping">

<hibernate-mapping>
	<class name="com.barrieault.budgettabs.User" table="user">
	<id name="ID" column="ID" type="int">  
		 	<generator class="increment"></generator>  
		 </id>
		<property name="username" column="username" type="string"></property>
		<property name="email" column="email" type="string"></property>
		<property name="password" column="password" type="string"></property>
		<property name="spendingMax" column="spendingMax" type="int"></property>
		<property name="currentSpent" column="currentSpent" type="int"></property>
   <!-- <property name="newPurchase" column="newPurchase" type="int"></property> -->
	</class>	
</hibernate-mapping> 